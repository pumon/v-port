<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="com.project.esh_an.portal1.Menu">

    <Button
        android:id="@+id/my_profile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pay_fee"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="@android:color/darker_gray"
        android:text="@string/my_profile"
        android:textAppearance="@android:style/TextAppearance.Widget.Button"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pay_fee"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/check_fee"
        android:layout_alignStart="@+id/my_profile"
        android:layout_marginBottom="35dp"
        android:text="@string/pay_fees"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textStyle="bold" />

    <Button
        android:id="@+id/check_fee"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/change_pswd"
        android:layout_alignStart="@+id/pay_fee"
        android:layout_marginBottom="35dp"
        android:background="@android:color/darker_gray"
        android:text="Check Fee Details"
        android:textStyle="bold" />

    <Button
        android:id="@+id/change_pswd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/check_fee"
        android:layout_marginBottom="83dp"
        android:text="@string/change_password"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_dark"
        android:text="Log Out"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

</RelativeLayout>
